{
  "pluginAlias": "IPDevicePlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "title": "Name",
              "required": true
            },
            "ip": {
              "type": "string",
              "title": "IP Address",
              "required": true
            },
            "type": {
              "type": "string",
              "title": "Device Type",
              "required": true
            },
            "password": {
              "type": "string",
              "title": "Password",
              "required": true
            },
            "username": {
              "type": "string",
              "title": "Username",
              "required": true
            },
            "refreshInterval": {
              "type": "integer",
              "title": "Refresh Interval (seconds)",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}
